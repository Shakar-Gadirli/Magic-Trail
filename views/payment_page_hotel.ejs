        <% if (result.length >= 2) { %>
            
        <div class="container" >
            <div class="row">
                <div class="col-6 offset-3 login-container" style="background-color: rgb(139, 172, 171);">
                <form method="POST" action="">
                    <div class= "centered"> 
                        <p style="font-size: 60px; font-family: 'Playfair Display';">Guest details</p>
                            <label class="labels">Birthdate</label>
                            <input type="date" name="birthday" style="font-size: x-large; display: block;" required>
                            <br>
                            <label class="labels">Passport ID</label>
                            <input type="text" name="cardno" style="font-size: x-large; display: block;" required>
                            <br>
                            <label class="labels">Category</label>
                            <select name="category" style="font-size: x-large; display: block;" required>
                                <option value="adult">Adult</option>
                                <option value="child">Child</option>
                            </select>
                            <br>
                            <label class="labels">Email</label>
                            <input type="email" name="email" style="font-size: x-large; display: block;" required>
                            <br>
                            <label class="labels">Passport expiration date</label>
                            <input type="date" name="expiration" style="font-size: x-large; display: block;" required>
                            <br>
                            <label class="labels">Name</label>
                            <input type="text" name="name" style="font-size: x-large; display: block;" required>
                            <br>
                            <label class="labels">Nationality</label>
                            <input type="text" name="nationality" style="font-size: x-large; display: block;" required>
                            <br>
                            <label class="labels">Phone</label>
                            <input type="text" name="phone" style="font-size: x-large; display: block;" required>
                            <br>
                            <label class="labels">Surname</label>
                            <input type="text" name="surname" style="font-size: x-large; display: block;" required>
                            <br>
                            <label class="labels">Title</label>
                            <select name="title" style="font-size: x-large; display: block;" required>
                                <option value="mr">Mr.</option>
                                <option value="ms">Ms.</option>
                            </select>
                            <br>
                        </div>
                
                </div>
                </div>
                </div>
                <div class="container mt-5 mb-5 d-flex justify-content-center">
                    <div class="card p-5">
                        <div>
                            <p class="text">Please make the payment for booking.</p>
                        </div>
                        <div class="pricing p-3 rounded mt-4 d-flex justify-content-between">
                            <div class="images d-flex flex-row align-items-center"> <img src="https://i.imgur.com/S17BrTx.png" class="rounded" width="60">
                                <div class="d-flex flex-column ml-4"> <span class="business">Total price </span></div>
                            </div>
                            <!--pricing table-->
                            <div class="d-flex flex-row align-items-center"> <sup class="dollar font-weight-bold"><%= result[0] %></sup> <span class="amount ml-1 mr-1"><%= result[1] %></span></div> <!-- /pricing table-->
                        </div> 
                        <span class="detail mt-5">Payment details</span>
                        <div class="credit rounded mt-4 d-flex justify-content-between align-items-center">
                            <div class="d-flex flex-row align-items-center"> <img src="https://i.imgur.com/qHX7vY1.png" class="rounded" width="70">
                                <div class="d-flex flex-column ml-3"> <span class="business">Card Number</span><span> </span><input type="text" name="credit_no" placeholder="1234XXXXXXXX4567" class="card_num" required></div>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                                <div class="d-flex flex-column ml-3"> <span class="business">Exp. date</span><span> </span><input type="date" name="exp_date" placeholder="expiration date" class="exp" required></div>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                                <div class="d-flex flex-column ml-3"> <span class="business">CVC/CVV</span><span>   </span><input type="text" class="form-control cvv" placeholder="CVC" name="cvc" required></div>
                            </div>
                            <!-- <div class="d-flex flex-row align-items-center">
