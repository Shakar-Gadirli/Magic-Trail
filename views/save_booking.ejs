        <div class="container">
            <div class="row" >
                <div class="col-6 offset-3 login-container" style="background-image: url('https://i.pinimg.com/564x/ea/b2/64/eab2643e79e2c7aa5067625d9d2365b0.jpg'); background-size: 100%;">
                    <form method="POST" action="" >
                        <div class="split left">
                            <div class= "centered"> 
                            <p style="font-size: 30px; font-family: 'Playfair Display'">Passenger details</p>
                                <label class="labels">Birthdate</label>
                                <input type="date" name="birthday" style="font-size: x-large; display: block;" required>
                                <br>
                                <label class="labels">Card number</label>
                                <input type="text" name="cardno" style="font-size: x-large; display: block;" required>
                                <br>
                                <label class="labels">Category</label>
                                <select name="category" style="font-size: x-large; display: block;" required>
                                    <option value="adult">Adult</option>
                                    <option value="child">Child</option>
                                </select>
                                <br>
                                <label class="labels">Email</label>
                                <input type="email" name="email" style="font-size: x-large; display: block;" required>
                                <br>
                                <label class="labels">Expiration</label>
                                <input type="date" name="expiration" style="font-size: x-large; display: block;" required>
                                <br>
                                <label class="labels">Name</label>
                                <input type="text" name="name" style="font-size: x-large; display: block;" required>
                                <br>
                                <label class="labels">Nationality</label>
                                <input type="text" name="nationality" style="font-size: x-large; display: block;" required>
                                <br>
                                <label class="labels">Phone</label>
                                <input type="text" name="phone" style="font-size: x-large; display: block;" required>
                                <br>
                                <label class="labels">Surname</label>
                                <input type="text" name="surname" style="font-size: x-large; display: block;" required>
                                <br>
                                <label class="labels">Title</label>
                                <select name="title" style="font-size: x-large; display: block;" required>
                                    <option value="mr">Mr.</option>
                                    <option value="ms">Ms.</option>
                                </select>
                                <br>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
