                        <p>Room type: <%= obj.room_type%></p>
                        <p>Beds: <%= obj.bed%></p>
                        <p>Bed type: <%= obj.bed_type%></p>
                        <p>Total cost: <%= obj.total%> <%= obj.currency%></p>
                         <hr>
                        <br>
                         <% }) %>
                      </div>
                      <% } %>
