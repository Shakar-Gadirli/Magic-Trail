            <div class="col-md-8 mt-1">
              <div class="card mb-3 content">
                <h1 class="m-3 pt-3">About</h1>
                
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-3">
                      <h5>Name</h5>
                    </div>
                    <div class="col-md-9 text-secondary">
                      <% if( result.length == 2) {%>
                      <%= result[0].passport.user.name %>
                      <% }else{ %>
                      <%= result[0] %>
                      <% } %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-md-3">
                      <h5> Email</h5>
                    </div>
                    <div class="col-md-9 text-secondary">
                      <% if( result.length == 2) {%>
                      <%= result[0].passport.user.email %>
                      <% }else{ %>
                      <%= result[1] %>
                      <% } %>
                    </div>
                  </div>
                  <hr>               
                <div class="card mb-3 content">
                  <h1 class="m-3">Recent Bookings</h1>
                  
                  <div class="card-body">
                    
                    <div class="row">
                      <div class="col-md-3">
                        <h5> Flights </h5>
                      </div>
                      <% if( result.length == 2) {%>
                      
                      <div class="col-md-9 text-secondary">
                        <% result[1][0].forEach((obj)=>{ %>
                        <p>Source airline: <%= obj.src_airline %></p>
                        <p>Flight number: <%= obj.src_flight_no %></p>
                        <p>Source station: <%= obj.src_station %></p>
                        <p>Departure time: <%= obj.src_dept %></p>
                        <p>Destination airline: <%= obj.dest_airline%></p>
                        <p>Flight number: <%= obj.dest_flight_no%></p>
                        <p>Destination station: <%= obj.dest_station%></p>
                        <p>Arrival time: <%= obj.dest_arr%></p>
                        <p>Total cost: <%= obj.amount%> <%= obj.currency%></p>
                        <hr>
                        <br>
                        <% }) %>
                      </div>
                      <hr>
                      
                      <% }else{ %>
                        
                        <div class="col-md-9 text-secondary">
                          <% result[2][0].forEach((obj)=>{ %>
                        <p>Source airline: <%= obj.src_airline %></p>
                        <p>Flight number: <%= obj.src_flight_no %></p>
                        <p>Source station: <%= obj.src_station %></p>
                        <p>Departure time: <%= obj.src_dept %></p>
                        <p>Destination airline: <%= obj.dest_airline%></p>
                        <p>Flight number: <%= obj.dest_flight_no%></p>
                        <p>Destination station: <%= obj.dest_station%></p>
                        <p>Arrival time: <%= obj.dest_arr%></p>
                        <p>Total cost: <%= obj.amount%> <%= obj.currency%></p>
                        <hr>
                        <br>
                        <% }) %>
                      </div>
                     
                      <% } %>
                  </div>
            
                      <div class="row">
                        
                      <div class="col-md-3">
                        <h5> Hotels </h5>
                      </div>
                        
                      <% if( result.length == 2) {%>
                      
                      <div class="col-md-9 text-secondary">
                        <% result[1][1].forEach((obj)=>{ %>
                        <p>Hotel id: <%= obj.hotel_id %></p>
                        <p>Hotel name: <%= obj.name %></p>
                        <p>Rating: <%= obj.rating %></p>
                        <p>Street address: <%= obj.lines %></p>
                        <p>City: <%= obj.city%></p>
                        <p>Phone: <%= obj.phone%></p>
                        <p>Check in date: <%= obj.checkIn%></p>
                        <p>Check out date: <%= obj.checkOut%></p>
                        <p>Room type: <%= obj.room_type%></p>
                        <p>Beds: <%= obj.bed%></p>
                        <p>Bed type: <%= obj.bed_type%></p>
                        <p>Total cost: <%= obj.total%> <%= obj.currency%></p>
                        <hr>
                        <br>
                        <% }) %>
                      </div>
                      <% }else{ %>
                        
                       <div class="col-md-9 text-secondary">
                         <% result[2][1].forEach((obj)=>{ %>
                        <p>Hotel id: <%= obj.hotel_id %></p>
                        <p>Hotel name: <%= obj.name %></p>
                        <p>Rating: <%= obj.rating %></p>
                        <p>Street address: <%= obj.lines %></p>
                        <p>City: <%= obj.city%></p>
                        <p>Phone: <%= obj.phone%></p>
